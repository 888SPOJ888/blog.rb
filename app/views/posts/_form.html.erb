<form method="post" action="/posts/" id="create_post">
  <h2>Title</h2>
  <input name="title">
  <h2>Image URL</h2>
  <input name="image_url">
  <h2>Content</h2>
  <textarea name="content"></textarea>
  <input type="submit" value="Send">
  <% if @post.errors.any? %>
    <div id ="error_explanation">
        <h2>
            <%= pluralize(@post.errors.count, "errors") %>
            don't allowed you to create your post!!! :
        </h2>
        <ul>
            <% @post.errors.full_messages.each do |msg|%>
            <li><%= msg %></li>
            <% end %>
        </ul>
  </div>
<% end %>


</form>
